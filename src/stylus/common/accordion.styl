.accordion-component
    button
        margin: 0
        outline: none

    .body
        box-sizing: border-box
        padding: 1em 0.4em
        box-shadow: inset 0 0.5em 0.5em black
        background: rgba(255, 255, 255, 0.01)

        .hide
            display: none
        .show
            display: block
